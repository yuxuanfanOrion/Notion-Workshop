{
  "name": "notion-workshop",
  "displayName": "Notion Workshop",
  "description": "Edit and sync Notion pages inside VS Code.",
  "version": "0.0.1",
  "publisher": "local",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:notion-workshop.pull",
    "onCommand:notion-workshop.push",
    "onCommand:notion-workshop.openPage",
    "onView:notion-workshop.sidebar",
    "onStartupFinished",
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "notion-workshop.login",
        "title": "Notion: Login/Configure",
        "category": "Notion",
        "icon": "$(plug)"
      },
      {
        "command": "notion-workshop.logout",
        "title": "Notion: Logout",
        "category": "Notion",
        "icon": "$(debug-disconnect)"
      },
      {
        "command": "notion-workshop.refresh",
        "title": "Notion: Refresh Pages",
        "category": "Notion",
        "icon": "$(refresh)"
      },
      {
        "command": "notion-workshop.pull",
        "title": "Notion: Pull",
        "category": "Notion",
        "icon": "$(cloud-download)"
      },
      {
        "command": "notion-workshop.push",
        "title": "Notion: Push",
        "category": "Notion",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "notion-workshop.openPage",
        "title": "Notion: Open Page",
        "category": "Notion",
        "icon": "$(go-to-file)"
      }
    ],
    "configuration": {
      "title": "Notion Workshop",
      "properties": {
        "notionWorkshop.token": {
          "type": "string",
          "default": "",
          "description": "Notion integration token."
        },
        "notionWorkshop.databaseId": {
          "type": "string",
          "default": "",
          "description": "Target Notion database ID."
        },
        "notionWorkshop.defaultSyncPath": {
          "type": "string",
          "default": "notion-sync",
          "description": "Default local folder for Notion pages. Relative paths resolve from the workspace root."
        },
        "notionWorkshop.filter": {
          "type": "string",
          "default": "",
          "description": "Filter for page titles (substring match)."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "notion-workshop",
          "title": "Notion",
          "icon": "resources/notion.svg"
        }
      ]
    },
    "views": {
      "notion-workshop": [
        {
          "id": "notion-workshop.pages",
          "name": "Pages"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "notion-workshop.login",
          "when": "view == notion-workshop.pages",
          "group": "navigation@1"
        },
        {
          "command": "notion-workshop.refresh",
          "when": "view == notion-workshop.pages",
          "group": "navigation@2"
        },
        {
          "command": "notion-workshop.logout",
          "when": "view == notion-workshop.pages",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "notion-workshop.openPage",
          "when": "view == notion-workshop.pages && viewItem == page",
          "group": "inline@1"
        },
        {
          "command": "notion-workshop.pull",
          "when": "view == notion-workshop.pages && viewItem == page",
          "group": "inline@2"
        },
        {
          "command": "notion-workshop.push",
          "when": "view == notion-workshop.pages && viewItem == page",
          "group": "inline@3"
        },
        {
          "command": "notion-workshop.openPage",
          "when": "view == notion-workshop.pages && viewItem == page",
          "group": "1_actions@1"
        },
        {
          "command": "notion-workshop.pull",
          "when": "view == notion-workshop.pages && viewItem == page",
          "group": "1_actions@2"
        },
        {
          "command": "notion-workshop.push",
          "when": "view == notion-workshop.pages && viewItem == page",
          "group": "1_actions@3"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "prepublish": "npm run compile",
    "test": "npm run compile && node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.30",
    "@types/vscode": "^1.85.0",
    "@vscode/test-electron": "^2.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.5.4"
  }
}
